<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/backgound_listview"
    tools:context="com.agrifood.percyku.agrifood.FramerNewSpot">


    <android.support.v7.widget.Toolbar
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:theme="@style/ToolbarColoredBackArrow"
        android:background="#A7BF42"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/android:Theme.Holo.Light.DarkActionBar">

        <TextView
            android:id="@+id/app_bar_anme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新增推薦"
            android:layout_gravity="center"
            android:textColor="#e7ffffff"
            android:textSize="25dp"
            android:textStyle="bold" />

    </android.support.v7.widget.Toolbar>


    <View
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:background="@color/white" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_weight="0.10"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp">


            <ImageView
                android:layout_width="190dp"
                android:layout_height="40dp"
                android:src="@drawable/farmname"
                android:scaleType="fitXY" />

            <EditText
                android:layout_width="144dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|bottom" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_weight="0.10"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp">


            <ImageView
                android:layout_width="190dp"
                android:layout_height="40dp"
                android:src="@drawable/farmintro"
                android:scaleType="fitXY" />

        </LinearLayout>

        <EditText
            android:layout_width="225dp"
            android:layout_height="100dp"
            android:background="@drawable/bg_edittext_normal"
            android:padding="5dip"
            android:textColorHint="#AAAAAA"
            android:textSize="15dip"
            android:lines="4"
            android:hint="請輸入..."
            android:gravity="top"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="20dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp">

            <ImageView
                android:layout_width="181dp"
                android:layout_height="match_parent"
                android:src="@drawable/farmintro"
                android:scaleType="fitXY"
                android:layout_gravity="center_vertical" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上傳"
                android:id="@+id/button2"
                android:layout_gravity="center_vertical|bottom"
                android:layout_marginLeft="10dp" />

            <TextView
                android:id="@+id/upload_1"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="ok"
                android:textSize="24dp"
                android:visibility="gone"
                android:layout_gravity="center_vertical|bottom" />


        </LinearLayout>

        <ImageView
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:id="@+id/imageButton"
            android:src="@drawable/insertbutton"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="70dp" />

    </LinearLayout>

</LinearLayout>
